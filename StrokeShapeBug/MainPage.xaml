<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shb="clr-namespace:StrokeShapeBug"
             x:Class="StrokeShapeBug.MainPage">
    <Grid RowDefinitions="auto,*">
        <Button Grid.Row="0" Text="RefreshList" Clicked="Button_Clicked" WidthRequest="100" HeightRequest="50"></Button>
       
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="VerticalPanel" Spacing="5">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <shb:MyCustomControl WidthRequest="100" HeightRequest="50">
                        </shb:MyCustomControl>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
